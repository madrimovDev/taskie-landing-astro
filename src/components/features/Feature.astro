---
import clsx from "clsx/lite";
interface Props {
  title: string,
  description: string,
  image: string
  reverse: boolean
}
const { title, description, image, reverse = false } = Astro.props;
---

<div class={clsx("flex gap-8 md:gap-16 items-center", reverse && "flex-col-reverse md:flex-row-reverse", !reverse && "flex-col-reverse md:flex-row")}>
  <div class="w-full flex flex-col items-start gap-4 md:gap-8">
    <h3 class="text-2xl md:text-4xl font-black">{title}</h3>
    <p class="md:text-lg opacity-50">{description}</p>
    <button
      class="px-2 sm:px-4 md:px-8 py-2 md:py-4 md:text-lg border-2 rounded-md hover:bg-primary/10 font-bold border-primary text-primary mt-4 md:mt-8">Learn
      More
    </button>
  </div>
  <div class="w-[70%] sm:w-[60%] md:w-full">
    <img src={image} alt="Peoples" class="w-full" />
  </div>
</div>