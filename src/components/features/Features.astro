---
import Feature from "./Feature.astro";
import { t } from "i18next";
const feats = t("features.features", {
  returnObjects: true
}) as { title: string, details: string }[];
---
<section id="features" class="py-8">
  <div class="container">
    <div id="features-container" class="flex flex-col justify-center items-center my-16">
      <h2 id="features-title" class="text-3xl md:text-6xl font-semibold">{t("features.title")}</h2>
      <p id="features-desc" class="md:w-1/2 mt-4 md:text-lg text-center opacity-50">{t("features.description")}</p>
    </div>
    <div class="flex flex-col gap-32 mt-10">
      {
        feats.map((feat, i) => (
          <Feature
            title={feat.title}
            description={feat.details}
            reverse={i % 2 === 0} image="/peoples.png" />
        ))
      }
    </div>
  </div>
</section>

<script>
  import { gsap, ScrollTrigger } from "../../utils/gsap";

  const timeline = gsap.timeline({
    defaults: {
      scale: 0.8,
      opacity: 0,
      transformOrigin: "center",
      duration: 1,
      ease: "power2.out"
    }
  });

  timeline.from("#features-title", {
    y: -50,
    rotation: -5
  }).from("#features-desc", {
    y: -50,
    rotation: 5
  }, 0.2);

  ScrollTrigger.create({
    trigger: "#features-container",
    start: "top 70%",
    end: "bottom 70%",
    animation: timeline,
    scrub: 1
  });

</script>